{
    "manifest_version": 2,

    "name": "Open In BeyondPlayer Pro",
    "description": "Open videos in BeyondPlayer Pro.",
    "version": "2.2.0",
    "options_page": "options.html",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Open In BeyondPlayer Pro"
    },
    "permissions": ["tabs", "activeTab", "contextMenus", "storage"],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
